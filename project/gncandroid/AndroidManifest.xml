<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="rednus.gncandroid" android:versionCode="2"
	android:versionName=".1">
	<permission android:label="Access SD Card"
		android:name="android.permission.WRITE_EXTERNAL_STORAGE"></permission>
	<uses-sdk android:minSdkVersion="3"/>
	<supports-screens android:resizeable="true"
                  android:smallScreens="true"
                  android:normalScreens="true"
                  android:largeScreens="true"
                  android:anyDensity="true"/>
	<application android:icon="@drawable/icon"
		android:description="@string/app_name" android:label="@string/app_name"
		android:theme="@android:style/Theme" android:allowClearUserData="true" android:name="GnuCashViewer">
		<activity android:icon="@drawable/icon" android:description="@string/app_name"
			android:name="MainView" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".Preferences"></activity>
		<activity android:name=".FileChooser" android:theme="@android:style/Theme.Dialog"
			android:label="@string/file_choose_title">
			<intent-filter>
				<action android:name="rednus.GNCAndroid.action.FILECHOOSER"></action>
				<category android:name="android.intent.category.DEFAULT"></category>
			</intent-filter>
		</activity>
		<activity android:name=".AccountsActivity"></activity>
		<activity android:name=".QuickEntryActivity_"></activity>
		<activity android:name=".TransactionActivity"></activity>
			<activity android:name=".BookDetailsActivity"></activity>
</application>
</manifest>